
@{
    ViewData["Title"] = "StripeCancel";
}

<main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-l">Cancelled</h1>

            <p class="govuk-body">
                You have cancelled this payment.
            </p>
            <p class="govuk-body">
                <a asp-controller="Pay" asp-action="Stripe" class="govuk-button">Start again</a>
            </p>
        </div>
    </div>
</main>