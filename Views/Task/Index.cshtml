@model nidirect_app_frontend.ViewModels.BaseViewModel
@{
    ViewData["Title"] = "Index";
}

@Html.AntiForgeryToken()

<a href="javascript:history.go(-1)" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper" id="main-content" role="main">
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <partial name="../Components/_errorSummary.cshtml" />

        <h1 class="govuk-heading-l">Apply for [Service Name]</h1>

        <p class="govuk-body">Complete these steps to complete your application</p>

        <p class="govuk-body">You can save your application and return to it later if you need to.</p>

        <p class="govuk-body">
            At the end of each section you will be required to check your answers.
            If any are incorrect you will have the opportunity to change them before proceeding to the next section.
        </p>

        <ol class="app-task-list govuk-!-margin-bottom-8">
            <li class="app-task-list__item">
                <h2 class="app-task-list__section">
                    <span class="app-task-list__section-number">1. </span> Tell us about you.
                    <strong class="govuk-tag app-task-list__tag govuk-!-margin-top-1">Completed</strong>
                </h2>

                <a class="govuk-link" aria-label="Link to edit step 1 answers">Check and change your answers</a>

            </li>

            <li class="app-task-list__item">
                <h2 class="app-task-list__section">
                    <span class="app-task-list__section-number">2. </span>
                    <span>Give details about your license</span>
                    <strong class="govuk-tag app-task-list__tag">Completed</strong>
                </h2>
                <a class="govuk-link" aria-label="Link to edit step 2 answers">Check and change your answers</a>
            </li>

            <li class="app-task-list__item">
                <h2 class="app-task-list__section">
                    <span class="app-task-list__section-number">3. </span>
                    <span>Send documents</span>

                    <strong class="govuk-tag app-task-list__tag">Completed</strong>

                </h2>

                <a class="govuk-link" aria-label="Link to edit step 6 answers">Check and change your answers</a>

            </li>

            <li class="app-task-list__item">
                <h2 class="app-task-list__section">
                    <span class="app-task-list__section-number">4. </span>
                    <span>Pay and submit</span>
                    <strong class="govuk-tag govuk-tag--blue app-task-list__tag govuk-!-margin-top-1">Not Started yet</strong>
                </h2>

                <a asp-action="GovUkPay" asp-controller="Pay" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-2  govuk-!-margin-left-6 govuk-button--start" data-module="govuk-button">
                    Start
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                    </svg>
                </a>
            </li>
        </ol>
    </div>
</div>
</main>